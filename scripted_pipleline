node {
    // Stage 1: Checkout Code
    stage('Checkout') {
        echo 'Checking out source code changes'
    }

    // Stage 2: Build Application
    stage('Build') {
        echo 'Building the Commit changes'
    }

    // Stage 3: Run Tests
    stage('Test') {
        echo 'Running tests...'
    }

    // Stage 4: Deploy Application (Conditional)
    stage('Deploy') {
            echo 'Deploying the application...'
        }
    }
