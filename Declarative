// Jenkinsfile (Declarative Pipeline)
pipeline {
    agent any 
	tools {
	  maven 'Maven_home'
	}
    stages {
        stage('GIT Checkout') { 
            steps { 
                echo 'Check out ' 
				git branch: 'main', credentialsId: 'GIT-MAILTODHEENA-CREDENTIALS', url: 'https://github.com/mailtodheena-create/demo.git'
            }
        }
		
		stage('Maven Build') { 
            steps { 
                echo 'MAven Build Starts....'
				echo 'Maven Version....'
				echo '$(mvn --version)'
				echo 'Java Version....'	
				echo '$(java --version)'
				mvn build
            }
        }
		stage('Code Deploy') { 
            steps { 
                echo 'Hello World from Stage 3' 
				mvn deploy
            }
        }
    }
}
